<local:ViewBase
    x:Class="CSlickRun.UI.Views.CommandView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CSlickRun.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSlickRun.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:CSlickRun.UI"
    xmlns:viewModels="clr-namespace:CSlickRun.UI.ViewModels"
    d:DesignHeight="800"
    d:DesignWidth="1500"
    Background="Transparent"
    mc:Ignorable="d">
    <local:ViewBase.DataContext>
        <viewModels:CommandVm />
    </local:ViewBase.DataContext>
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="200" />
            <ColumnDefinition
                x:Name="EditSection"
                Width="3*"
                MinWidth="900" />
        </Grid.ColumnDefinitions>
        <GridSplitter
            Grid.Row="0"
            Grid.Column="0"
            Width="5"
            HorizontalAlignment="Right" />
        <ScrollViewer
            x:Name="test"
            Grid.Row="0"
            Grid.Column="0"
            Margin="10,10,10,5"
            Style="{DynamicResource ModernScrollViewer}">
            <controls:CListBox
                x:Name="CommandHost"
                Margin="0,10,0,0"
                Background="Transparent"
                BindableSelectedItems="{Binding SelectedCommands, Mode=OneWayToSource}"
                ItemContainerStyle="{DynamicResource ListBoxItemStyle}"
                ItemsSource="{Binding VisibleCommands, Mode=OneWay}"
                SelectionChanged="CommandHost_SelectionChanged"
                SelectionMode="Extended">
                <controls:CListBox.ItemTemplate>
                    <DataTemplate>
                        <controls:CommandListButton
                            x:Name="Item"
                            Width="{Binding ElementName=test, Path=ActualWidth}"
                            MinWidth="300"
                            MinHeight="55"
                            MaxWidth="1400"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            DeleteCommand="{Binding DataContext.DeleteCommand, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                <Setter TargetName="Item" Property="Background" Value="{DynamicResource HoverBrushColored}" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </controls:CListBox.ItemTemplate>
            </controls:CListBox>
        </ScrollViewer>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal">
            <Grid Background="Transparent">
                <TextBox
                    x:Name="SearchTermTextBox"
                    Width="400"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ui:FocusBehaviour.IsFocused="{Binding ForbidShortcutExecution, Mode=OneWayToSource}"
                    ui:FocusBehaviour.TrackFocus="True"
                    Style="{DynamicResource ModernTextBox}"
                    Text="{Binding CommandFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    x:Name="SearchTextBoxPlaceholder"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource HoverBrushBasic}"
                    IsHitTestVisible="False"
                    Text="Search for command...">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Setter Property="UseLayoutRounding" Value="True" />
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Padding" Value="0,5,0,0" />
                            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
                            <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled" />
                            <Setter Property="FontFamily" Value="Lucida Console" />
                            <Setter Property="Height" Value="20" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </StackPanel>
        <ScrollViewer
            x:Name="EditHost"
            Grid.Row="0"
            Grid.Column="1"
            Margin="20,0,20,0"
            Panel.ZIndex="999"
            Style="{DynamicResource ModernScrollViewer}">
            <StackPanel
                Grid.Row="0"
                Margin="0,10,0,0"
                Orientation="Vertical">
                <controls:PanelHeader HeaderLabelContent="Name" />
                <TextBox
                    x:Name="TextBoxName"
                    Width="400"
                    Height="30"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    ui:FocusBehaviour.IsFocused="{Binding ForbidShortcutExecution, Mode=OneWayToSource}"
                    ui:FocusBehaviour.TrackFocus="True"
                    Background="{DynamicResource MainBackgroundBrush}"
                    MaxLength="30"
                    Style="{DynamicResource ModernTextBox}"
                    Text="{Binding CurrentCommand.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <controls:PanelHeader Margin="0,15,0,0" HeaderLabelContent="Paths to execute" />
                <controls:CDataGrid
                    x:Name="DataGridCommands"
                    Width="{Binding TestWidth, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                    MinHeight="300"
                    Margin="0,12,0,0"
                    HorizontalAlignment="Stretch"
                    AutoGenerateColumns="False"
                    CanUserDeleteRows="True"
                    CanUserResizeColumns="False"
                    HorizontalScrollBarVisibility="Disabled"
                    ItemsSource="{Binding CommandPaths, Mode=TwoWay}"
                    OnSizeChangedCommand="{Binding TestCommand}"
                    SelectionMode="Single"
                    SelectionUnit="Cell">
                    <controls:CDataGrid.Columns>
                        <DataGridTextColumn
                            Width="{Binding TestColumnWidth, Mode=OneWay}"
                            Binding="{Binding Path}"
                            EditingElementStyle="{DynamicResource ModernTextBoxDataGridCell}"
                            ElementStyle="{DynamicResource ModernTextBlock}"
                            Header="Path" />
                        <DataGridTextColumn
                            Width="{Binding TestColumnWidth, Mode=OneWay}"
                            Binding="{Binding Argument}"
                            EditingElementStyle="{DynamicResource ModernTextBoxDataGridCell}"
                            Header="Argument" />
                        <DataGridTextColumn
                            Width="{Binding TestColumnWidth, Mode=OneWay}"
                            Binding="{Binding StartupPath}"
                            EditingElementStyle="{DynamicResource ModernTextBoxDataGridCell}"
                            Header="Startup Path" />
                    </controls:CDataGrid.Columns>
                </controls:CDataGrid>
                <controls:PanelHeader Margin="0,15,0,0" HeaderLabelContent="Note" />
                <TextBox
                    x:Name="TextBoxNote"
                    Width="800"
                    Height="Auto"
                    MinHeight="30"
                    Margin="0,15,0,0"
                    ui:FocusBehaviour.IsFocused="{Binding ForbidShortcutExecution, Mode=OneWayToSource}"
                    ui:FocusBehaviour.TrackFocus="True"
                    AcceptsReturn="True"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource MainAccentBrush}"
                    BorderThickness="1"
                    Style="{DynamicResource ModernTextBox}"
                    Text="{Binding CurrentCommand.Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</local:ViewBase>
