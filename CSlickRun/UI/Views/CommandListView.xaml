<local:ViewBase
    x:Class="CSlickRun.UI.Views.CommandListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:CSlickRun.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSlickRun.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:CSlickRun.UI"
    xmlns:viewModels="clr-namespace:CSlickRun.UI.ViewModels"
    Width="1493"
    d:DesignHeight="800"
    d:DesignWidth="1493"
    mc:Ignorable="d">
    <b:Interaction.Behaviors>
        <ui:KeyPressBehavior Key="F" Command="{Binding SaveCommand}" />
        <ui:KeyPressBehavior Key="T" Command="{Binding AddCommand}" />
        <ui:KeyPressBehavior Key="W" Command="{Binding MoveIndexUpCommand}" />
        <ui:KeyPressBehavior Key="S" Command="{Binding MoveIndexDownCommand}" />
    </b:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ScrollViewer
            Grid.Row="0"
            Width="1478"
            Margin="10,0,0,0"
            HorizontalAlignment="Center"
            Panel.ZIndex="9999"
            HorizontalScrollBarVisibility="Disabled"
            Style="{DynamicResource ModernScrollViewer}">
            <StackPanel
                Margin="0,10,0,0"
                CanHorizontallyScroll="False"
                Orientation="Vertical">
                <controls:PanelHeader HeaderLabelContent="Commands" />
                <ListBox
                    x:Name="CommandHost"
                    Width="1410"
                    Margin="0,10,0,0"
                    ItemContainerStyle="{DynamicResource ListBoxItemStyle}"
                    ItemsSource="{Binding VisibleCommands, Mode=OneWay}"
                    SelectedItem="{Binding SelectedCommand}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                x:Name="ContentGrid"
                                Width="1400"
                                Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="7*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    x:Name="TextHost"
                                    Grid.Column="0"
                                    Height="25"
                                    HorizontalAlignment="Left"
                                    FontSize="22"
                                    Style="{DynamicResource ModernTextBlock}"
                                    Text="{Binding Name}" />
                                <Button
                                    Grid.Column="1"
                                    Background="Transparent"
                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Edit (e)"
                                    FontSize="22"
                                    IsHitTestVisible="False"
                                    Style="{DynamicResource ButtonDefault}" />
                                <Button
                                    Grid.Column="2"
                                    Background="Transparent"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Delete (q)"
                                    FontSize="22"
                                    IsHitTestVisible="False"
                                    Style="{DynamicResource ButtonDefault}" />
                            </Grid>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                    <Setter TargetName="ContentGrid" Property="Background" Value="{DynamicResource HoverBrushBasic}" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>
        <Button
            Grid.Row="1"
            Width="200"
            HorizontalAlignment="Center"
            Command="{Binding SaveCommand}"
            Content="Save (f)"
            Cursor="Hand"
            Style="{DynamicResource ButtonColored}" />
        <Button
            Grid.Row="1"
            Width="200"
            HorizontalAlignment="Right"
            Background="{DynamicResource MainBackgroundBrush}"
            Command="{Binding AddCommand}"
            Content="Add (t)"
            Style="{DynamicResource ButtonDefault}" />
        <TextBox
            x:Name="SearchTermTextBox"
            Grid.Row="1"
            Width="500"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{DynamicResource ModernTextBox}"
            Text="{Binding CommandFilter, Mode=TwoWay}"
            TextChanged="SearchTextBox_TextChanged" />
        <TextBlock
            Grid.Row="1"
            Margin="8,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Foreground="{DynamicResource HoverBrushBasic}"
            IsHitTestVisible="False"
            Text="Search for command...(x)">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Setter Property="UseLayoutRounding" Value="True" />
                    <Setter Property="SnapsToDevicePixels" Value="True" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Padding" Value="0,5,0,0" />
                    <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
                    <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled" />
                    <Setter Property="FontFamily" Value="Lucida Console" />
                    <Setter Property="Height" Value="20" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</local:ViewBase>
