<UserControl
    x:Class="CSlickRun.UI.Views.CommandListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CSlickRun.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSlickRun.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:CSlickRun.UI.ViewModels"
    Width="1493"
    d:DesignHeight="800"
    d:DesignWidth="1493"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ScrollViewer
            Grid.Row="0"
            Width="1478"
            Margin="10,0,0,0"
            HorizontalAlignment="Center"
            Panel.ZIndex="9999"
            HorizontalScrollBarVisibility="Disabled"
            Style="{DynamicResource ModernScrollViewer}">
            <StackPanel
                Margin="0,10,0,0"
                CanHorizontallyScroll="False"
                Orientation="Vertical">
                <controls:PanelHeader HeaderLabelContent="Commands" />
                <ListBox
                    x:Name="CommandHost"
                    Width="1410"
                    Margin="0,10,0,0"
                    ItemContainerStyle="{DynamicResource ListBoxItemStyle}"
                    ItemsSource="{Binding Commands, Mode=OneWay}"
                    SelectedItem="{Binding SelectedCommand}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="1400" Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="7*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Height="25"
                                    HorizontalAlignment="Left"
                                    FontSize="22"
                                    Style="{DynamicResource ModernTextBlock}"
                                    Text="{Binding Name}" />
                                <Button
                                    Grid.Column="1"
                                    Background="{DynamicResource MainBackgroundBrush}"
                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Edit"
                                    FontSize="22"
                                    Style="{DynamicResource ButtonDefault}" />
                                <Button
                                    Grid.Column="2"
                                    Background="{DynamicResource MainBackgroundBrush}"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Delete"
                                    FontSize="22"
                                    Style="{DynamicResource ButtonDefault}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>
        <Button
            Grid.Row="1"
            Width="200"
            HorizontalAlignment="Center"
            Command="{Binding SaveCommand}"
            Content="Save"
            Cursor="Hand"
            Style="{DynamicResource ButtonColored}" />
        <Button
            Grid.Row="1"
            Width="200"
            HorizontalAlignment="Right"
            Background="{DynamicResource MainBackgroundBrush}"
            Command="{Binding AddCommand}"
            Content="Add"
            Style="{DynamicResource ButtonDefault}" />
        <TextBox
            x:Name="SearchTextBox"
            Grid.Row="1"
            Width="600"
            Height="30"
            Margin="5,0,0,0"
            HorizontalAlignment="Left"
            Style="{DynamicResource ModernTextBox}"
            TextChanged="SearchTextBox_TextChanged" />
    </Grid>
</UserControl>
