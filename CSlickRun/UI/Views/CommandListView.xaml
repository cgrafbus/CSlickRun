<local:ViewBase
    x:Class="CSlickRun.UI.Views.CommandListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:CSlickRun.UI.Controls"
    xmlns:converter="clr-namespace:CSlickRun.Logic.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSlickRun.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:CSlickRun.UI"
    x:Name="Host"
    d:DesignHeight="800"
    d:DesignWidth="1493"
    Background="Transparent"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ui:BooleanInverterConverter x:Key="BooleanInverter" />
    </UserControl.Resources>
    <b:Interaction.Behaviors>
        <ui:KeyPressBehavior
            Key="F"
            CanExecute="{Binding ForbidShortcutExecution, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
            Command="{Binding SaveCommand}" />
        <ui:KeyPressBehavior
            Key="T"
            CanExecute="{Binding ForbidShortcutExecution, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
            Command="{Binding AddCommand}" />
        <ui:KeyPressBehavior
            Key="W"
            CanExecute="{Binding ForbidShortcutExecution, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
            Command="{Binding MoveIndexUpCommand}" />
        <ui:KeyPressBehavior
            Key="S"
            CanExecute="{Binding ForbidShortcutExecution, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
            Command="{Binding MoveIndexDownCommand}" />
        <ui:KeyPressBehavior
            Key="X"
            CanExecute="{Binding ForbidShortcutExecution, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
            Command="{Binding ActivateSearchCommand}" />
        <ui:KeyPressBehavior
            Key="E"
            CanExecute="{Binding ForbidShortcutExecution, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
            Command="{Binding ExecuteEditCommand}" />
        <ui:KeyPressBehavior
            Key="Q"
            CanExecute="{Binding ForbidShortcutExecution, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
            Command="{Binding ExecuteDeleteCommand}" />
        <ui:KeyPressBehavior
            Key="O"
            CanExecute="{Binding ForbidShortcutExecution, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
            Command="{Binding ImportCommand}" />
        <ui:KeyPressBehavior
            Key="P"
            CanExecute="{Binding ForbidShortcutExecution, Mode=OneWay, Converter={StaticResource BooleanInverter}}"
            Command="{Binding ExportCommand}" />
    </b:Interaction.Behaviors>
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="14*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ScrollViewer
            Grid.Row="0"
            Margin="10,0,0,0"
            HorizontalAlignment="Center"
            Panel.ZIndex="9999"
            HorizontalScrollBarVisibility="Disabled"
            Style="{DynamicResource ModernScrollViewer}">
            <StackPanel
                Margin="0,10,0,0"
                Background="Transparent"
                CanHorizontallyScroll="False"
                Orientation="Vertical">
                <controls:PanelHeader HeaderLabelContent="Commands" />
                <controls:CListBox
                    x:Name="CommandHost"
                    Width="{Binding ElementName=Host, Path=ActualWidth}"
                    MinWidth="400"
                    MaxWidth="1400"
                    Margin="0,10,0,0"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BindableSelectedItems="{Binding SelectedCommands, Mode=OneWayToSource}"
                    ItemContainerStyle="{DynamicResource ListBoxItemStyle}"
                    ItemsSource="{Binding VisibleCommands, Mode=OneWay}"
                    SelectedIndex="{Binding CurrentIndex, Mode=TwoWay}"
                    SelectionMode="Extended">
                    <controls:CListBox.ItemTemplate>
                        <DataTemplate>
                            <controls:CommandListButton
                                x:Name="Item"
                                Width="{Binding ElementName=CommandHost, Path=ActualWidth}"
                                MinWidth="400"
                                MinHeight="55"
                                MaxWidth="1400"
                                Background="{DynamicResource SecondaryBackgroundBrush}"
                                DeleteCommand="{Binding DataContext.ExecuteDeleteCommand, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                EditCommand="{Binding DataContext.ExecuteEditCommand, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                    <Setter TargetName="Item" Property="Background" Value="{DynamicResource HoverBrushColored}" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </controls:CListBox.ItemTemplate>
                </controls:CListBox>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="1" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="{DynamicResource SecondaryBackgroundBrush}">
                <TextBox
                    x:Name="SearchTermTextBox"
                    Width="400"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ui:FocusBehaviour.IsFocused="{Binding ForbidShortcutExecution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ui:FocusBehaviour.TrackFocus="True"
                    Style="{DynamicResource ModernTextBox}"
                    Text="{Binding CommandFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    x:Name="SearchTextBoxPlaceholder"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource HoverBrushBasic}"
                    IsHitTestVisible="False"
                    Text="Search for command...">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Setter Property="UseLayoutRounding" Value="True" />
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Padding" Value="0,5,0,0" />
                            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
                            <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled" />
                            <Setter Property="FontFamily" Value="Lucida Console" />
                            <Setter Property="Height" Value="20" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
            <Button
                Grid.Column="1"
                Width="200"
                HorizontalAlignment="Center"
                Command="{Binding SaveCommand}"
                Content="Save"
                Style="{DynamicResource ButtonColored}" />

            <Button
                Grid.Column="2"
                Width="200"
                HorizontalAlignment="Right"
                Background="Transparent"
                Command="{Binding AddCommand}"
                Content="Add"
                Style="{DynamicResource ButtonDefault}" />
        </Grid>
    </Grid>
</local:ViewBase>
