<Window
    x:Class="CSlickRun.UI.Windows.ConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:CSlickRun.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSlickRun.UI.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:CSlickRun.UI"
    xmlns:vm="clr-namespace:CSlickRun.UI.ViewModels"
    Title="Configure CSlickRun"
    Width="1600"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/Design/CSlickRun.ico"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:ConfigWindowVm />
    </Window.DataContext>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" CornerRadius="4" />
    </WindowChrome.WindowChrome>
    <Border
        Background="Transparent"
        BorderThickness="1"
        ClipToBounds="True"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.ClearTypeHint="Enabled"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">
        <Border.Clip>
            <RectangleGeometry
                RadiusX="12"
                RadiusY="12"
                Rect="0,0,1600,800" />
        </Border.Clip>
        <StackPanel
            Height="800"
            Background="Transparent"
            ClipToBounds="False"
            Orientation="Vertical">
            <StackPanel
                Width="1600"
                Height="40"
                VerticalAlignment="Center"
                Panel.ZIndex="1"
                Background="{DynamicResource MainBackgroundBrush}"
                FlowDirection="RightToLeft"
                Orientation="Horizontal">

                <Button
                    x:Name="CloseWindowButton"
                    Width="55"
                    Height="40"
                    Background="{DynamicResource MainBackgroundBrush}"
                    Click="CloseWindowButton_OnClick"
                    Content="X"
                    Style="{DynamicResource ButtonDefault}"
                    ToolTip="Close"
                    WindowChrome.IsHitTestVisibleInChrome="True" />
                <Button
                    x:Name="MinimizeWindowButton"
                    Width="55"
                    Height="40"
                    Background="{DynamicResource MainBackgroundBrush}"
                    Click="MinimizeWindowButton_OnClick"
                    Content="__"
                    Style="{DynamicResource ButtonDefault}"
                    ToolTip="Minimize"
                    WindowChrome.IsHitTestVisibleInChrome="True" />
            </StackPanel>
            <Grid Height="760" ClipToBounds="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="FirstGrid" Width="1*" />
                    <ColumnDefinition x:Name="SecondGrid" Width="12*" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="1"
                    Margin="7,7,7,7"
                    HorizontalAlignment="Stretch"
                    Orientation="Horizontal">
                    <Border
                        x:Name="BorderGridAdjuster"
                        Width="15"
                        CornerRadius="10,0,0,10"
                        MouseLeftButtonDown="BorderGridAdjuster_OnMouseLeftButtonDown"
                        Style="{DynamicResource BorderGridAdjuster}" />
                    <Border
                        x:Name="ViewHost"
                        Width="1440"
                        Panel.ZIndex="999"
                        Background="{DynamicResource SecondaryBackgroundBrush}"
                        CornerRadius="0,10,10,0">
                        <ContentControl Content="{Binding CurrentView}" Focusable="True" />
                    </Border>
                </StackPanel>
                <Grid
                    x:Name="SidePanel"
                    Grid.Column="0"
                    Margin="7,7,0,7"
                    Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border
                        Grid.Row="0"
                        Background="{DynamicResource SecondaryBackgroundBrush}"
                        ClipToBounds="True"
                        CornerRadius="6,6,0,0">
                        <StackPanel x:Name="NavBar" Background="Transparent">
                            <controls:NavigationBarButtonTest
                                x:Name="CommandNavButton"
                                Background="Transparent"
                                Command="{Binding NavigationCommand}"
                                Content="Commands"
                                Group="NavBarButton"
                                Style="{DynamicResource NavigationBarButtonStyleTopOne}" />
                            <controls:NavigationBarButtonTest
                                x:Name="SettingsNavButton"
                                Background="Transparent"
                                Command="{Binding NavigationCommand}"
                                Content="Settings"
                                Group="NavBarButton"
                                Style="{DynamicResource NavigationBarButtonStyle}" />
                            <controls:NavigationBarButtonTest
                                x:Name="HelpNavButton"
                                Background="Transparent"
                                Command="{Binding NavigationCommand}"
                                Content="Help"
                                Group="NavBarButton"
                                Style="{DynamicResource NavigationBarButtonStyle}" />
                        </StackPanel>
                    </Border>
                    <Border
                        Grid.Row="1"
                        Background="{DynamicResource SecondaryBackgroundBrush}"
                        ClipToBounds="True"
                        CornerRadius="0,0,10,10">
                        <StackPanel
                            x:Name="ActionNavBar"
                            VerticalAlignment="Bottom"
                            Background="Transparent"
                            FlowDirection="RightToLeft"
                            Orientation="Vertical"
                            Visibility="{Binding CurrentViewIsListView}">
                            <Button
                                Height="50"
                                Background="Transparent"
                                Command="{Binding ExportCommandsCommand}"
                                Style="{DynamicResource ButtonDefault}"
                                ToolTip="Export selected commands">
                                <Image
                                    Width="40"
                                    Height="40"
                                    Opacity="0.8"
                                    Source="/Design/Icons/export.png" />
                            </Button>
                            <Button
                                Height="50"
                                Background="Transparent"
                                Command="{Binding ImportCommandsCommand}"
                                Style="{DynamicResource ButtonDefault}"
                                ToolTip="Import commands">
                                <Image
                                    Width="40"
                                    Height="40"
                                    Opacity="0.8"
                                    Source="/Design/Icons/import.png" />
                            </Button>

                        </StackPanel>
                    </Border>

                </Grid>

            </Grid>
        </StackPanel>
    </Border>
</Window>
