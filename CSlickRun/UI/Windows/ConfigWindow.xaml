<Window
    x:Class="CSlickRun.UI.Windows.ConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:CSlickRun.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSlickRun.UI.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:CSlickRun.UI"
    xmlns:vm="clr-namespace:CSlickRun.UI.ViewModels"
    Title="Configure CSlickRun"
    Width="1600"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/Design/CSlickRun.ico"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:ConfigWindowVm />
    </Window.DataContext>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="20" CornerRadius="4" />
    </WindowChrome.WindowChrome>
    <Border
        Background="Transparent"
        BorderThickness="1"
        ClipToBounds="False"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.ClearTypeHint="Enabled"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">
        <Border.Clip>
            <RectangleGeometry
                RadiusX="12"
                RadiusY="12"
                Rect="0,0,1600,800" />
        </Border.Clip>
        <StackPanel
            Height="800"
            ClipToBounds="False"
            Orientation="Vertical">
            <StackPanel
                Width="1600"
                Height="23"
                VerticalAlignment="Top"
                Panel.ZIndex="1"
                Background="{DynamicResource TertiaryBackgroundBrush}"
                ClipToBounds="False"
                FlowDirection="RightToLeft"
                Orientation="Horizontal">

                <Button
                    x:Name="CloseWindowButton"
                    Width="40"
                    Height="23"
                    Background="{DynamicResource TertiaryBackgroundBrush}"
                    Click="CloseWindowButton_OnClick"
                    Content="X"
                    Style="{DynamicResource ButtonDefault}"
                    ToolTip="Close"
                    WindowChrome.IsHitTestVisibleInChrome="True" />
                <Button
                    x:Name="MinimizeWindowButton"
                    Width="40"
                    Height="23"
                    Background="{DynamicResource TertiaryBackgroundBrush}"
                    Click="MinimizeWindowButton_OnClick"
                    Content="__"
                    Style="{DynamicResource ButtonDefault}"
                    ToolTip="Minimize"
                    WindowChrome.IsHitTestVisibleInChrome="True" />
            </StackPanel>
            <Grid Height="770" ClipToBounds="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="14*" />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.Column="1"
                    Margin="0,7,7,7"
                    Panel.ZIndex="999"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    CornerRadius="10">
                    <ContentControl Content="{Binding CurrentView}" Focusable="True" />
                </Border>
                <Border
                    Grid.Column="0"
                    Margin="7"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    CornerRadius="6">
                    <StackPanel x:Name="NavBar">
                        <controls:NavigationBarButtonTest
                            x:Name="CommandNavButton"
                            Background="Transparent"
                            ClipToBounds="True"
                            Command="{Binding NavigationCommand}"
                            Content="Commands"
                            Group="NavBarButton"
                            Style="{DynamicResource NavigationBarButtonStyle}" />
                        <controls:NavigationBarButtonTest
                            x:Name="SettingsNavButton"
                            Background="Transparent"
                            Command="{Binding NavigationCommand}"
                            Content="Settings"
                            Group="NavBarButton"
                            Style="{DynamicResource NavigationBarButtonStyle}" />
                        <controls:NavigationBarButtonTest
                            x:Name="HelpNavButton"
                            Background="Transparent"
                            Command="{Binding NavigationCommand}"
                            Content="Help"
                            Group="NavBarButton"
                            Style="{DynamicResource NavigationBarButtonStyle}" />
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </Border>
</Window>
