<UserControl
    x:Class="CSlickRun.UI.Controls.ToastMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="40"
    d:DesignWidth="400"
    FontFamily="Roboto"
    mc:Ignorable="d">
    <Border
        Background="{DynamicResource TertiaryBackgroundBrush}"
        CornerRadius="5,0,0,5"
        Style="{DynamicResource BorderCore}">
        <StackPanel Orientation="Horizontal">
            <Image
                x:Name="ToastMessageImage"
                Width="30"
                Height="30"
                Margin="5" />
            <Border Margin="5,0,0,0" VerticalAlignment="Center">
                <TextBlock
                    x:Name="ToastMessageText"
                    Width="340"
                    Margin="5,0,0,0"
                    Padding="0"
                    Style="{DynamicResource ModernTextBlock}"
                    TextAlignment="Left" />

            </Border>
        </StackPanel>
    </Border>
</UserControl>
